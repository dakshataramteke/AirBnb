<% layout('layouts/boilerplate.ejs') -%>

<body>
    <div class="row offset-2">
        <h3 class="my-3">Listing Details:</h3>
        <div class="card col-8">
            <img src="<%= listings.image %>" class="show_img w-100" style="border-radius:1rem; height:400px">
            <div class=" card-body">
                <div class="card-text ">
                    <h5><%= listings.title %></h5>
                    <p><%= listings.description %></p>
                    <p>&#8377; <%= listings.price %></p>
                    <p><%= listings.location %></p>
                    <p><%= listings.country %></p>
                </div>
            </div>
        </div>
    
        <div class="d-flex mb-3">
            <button class="btn btn-success me-3"><a href="/listings/<%=listings._id%>/edit" class="text-white text-decoration-none">Edit</a></button>
            <form action="/listings/<%=listings._id%>?_method=DELETE" method="post">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
   
   
</body>
